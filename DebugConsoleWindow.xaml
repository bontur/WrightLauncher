<Window x:Class="WrightLauncher.DebugConsoleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="WrightLauncher Debug Console" 
        Height="600" Width="800"
        Background="#0F0E17"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" 
                Background="#1C1B26" 
                Padding="15,10"
                BorderBrush="#7C3AED"
                BorderThickness="0,0,0,2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="🐛" FontSize="18" Margin="0,0,10,0"/>
                    <TextBlock Text="DEBUG CONSOLE" 
                             FontSize="16" 
                             FontWeight="Bold"
                             Foreground="#F1F5F9">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#7C3AED" BlurRadius="4" Opacity="0.3" ShadowDepth="0"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="🗑️ Temizle" 
                            x:Name="ClearButton"
                            Click="ClearButton_Click"
                            Background="#EF4444"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="10,5"
                            Margin="5,0"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="6"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button Content="💾 Kaydet" 
                            x:Name="SaveButton"
                            Click="SaveButton_Click"
                            Background="#22C55E"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="10,5"
                            Margin="5,0"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="6"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        <Border Grid.Row="1" 
                Background="#000000" 
                BorderBrush="#334155"
                BorderThickness="1"
                Margin="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                         HorizontalScrollBarVisibility="Auto">
                <TextBox x:Name="LogTextBox"
                         Background="Transparent"
                         Foreground="#F1F5F9"
                         BorderThickness="0"
                         FontFamily="Consolas"
                         FontSize="12"
                         IsReadOnly="True"
                         TextWrapping="NoWrap"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         Padding="10"/>
            </ScrollViewer>
        </Border>
        <Border Grid.Row="2" 
                Background="#1C1B26" 
                Padding="15,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" 
                          Text="WrightLauncher Debug Console - Tüm debug çıktıları burada görünür" 
                          FontSize="11"
                          Foreground="#94A3B8"
                          VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Border Background="#EF4444" CornerRadius="3" Padding="5,2" Margin="2">
                        <TextBlock Text="ERROR" FontSize="9" FontWeight="Bold" Foreground="White"/>
                    </Border>
                    <Border Background="#F59E0B" CornerRadius="3" Padding="5,2" Margin="2">
                        <TextBlock Text="WARN" FontSize="9" FontWeight="Bold" Foreground="White"/>
                    </Border>
                    <Border Background="#22C55E" CornerRadius="3" Padding="5,2" Margin="2">
                        <TextBlock Text="SUCCESS" FontSize="9" FontWeight="Bold" Foreground="White"/>
                    </Border>
                    <Border Background="#06B6D4" CornerRadius="3" Padding="5,2" Margin="2">
                        <TextBlock Text="API" FontSize="9" FontWeight="Bold" Foreground="White"/>
                    </Border>
                    <Border Background="#8B5CF6" CornerRadius="3" Padding="5,2" Margin="2">
                        <TextBlock Text="INFO" FontSize="9" FontWeight="Bold" Foreground="White"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>



