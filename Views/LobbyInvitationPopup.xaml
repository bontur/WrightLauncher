<UserControl x:Class="WrightLauncher.Views.LobbyInvitationPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:localconv="clr-namespace:WrightLauncher.Converters"
             mc:Ignorable="d" 
             Width="380" Height="200">
    <Border Background="#1E1A2E"
            CornerRadius="12"
            BorderBrush="#8B5CF6"
            BorderThickness="1.5"
            Opacity="0">
        <Border.Effect>
            <DropShadowEffect Color="#000000" 
                              BlurRadius="20" 
                              ShadowDepth="10" 
                              Opacity="0.5"/>
        </Border.Effect>
        <Grid Margin="20">
            <Button x:Name="CloseButton"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Width="20" Height="20"
                    Margin="0,-2,0,0"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="CloseButton_Click">
                <TextBlock Text="✕" 
                           FontSize="12" 
                           Foreground="#A0A0A0"
                           HorizontalAlignment="Center"/>
            </Button>
            <StackPanel VerticalAlignment="Center" Margin="0,15,0,0">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <Ellipse Width="8" Height="8" 
                             Fill="#8B5CF6" 
                             VerticalAlignment="Center"
                             Margin="0,0,8,0"/>
                    <TextBlock Text="{localconv:Loc InvitePopupTitle}" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="#E1E1E1"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <Border x:Name="InviterAvatarBorder" 
                            Width="32" Height="32"
                            CornerRadius="16"
                            Background="#8B5CF6"
                            Margin="0,0,10,0">
                        <TextBlock x:Name="InviterAvatarText"
                                   Text="?" 
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock x:Name="InviterNameText"
                                   Text="KullanıcıAdı" 
                                   FontSize="13"
                                   FontWeight="Medium"
                                   Foreground="#E1E1E1"/>
                        <TextBlock Text="{localconv:Loc InvitePopupInviteMessage}"
                                   FontSize="11"
                                   Foreground="#A0A0A0"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Margin="0,0,0,15">
                    <TextBlock x:Name="LobbyCodeText"
                               Text="Lobby: EXAMPLE-123" 
                               FontSize="12"
                               FontWeight="Medium"
                               Foreground="#8B5CF6"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="LobbyCreatorText"
                                   Text="Kurucu: Admin" 
                                   FontSize="11"
                                   Foreground="#A0A0A0"
                                   Margin="0,0,12,0"/>
                        <TextBlock x:Name="LobbyMemberCountText"
                                   Text="5 üye" 
                                   FontSize="11"
                                   Foreground="#A0A0A0"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right">
                    <Button x:Name="DeclineButton"
                            Content="{localconv:Loc InvitePopupDeclineButton}"
                            Width="90"
                            Height="32"
                            Background="#EF4444"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="11"
                            FontWeight="Medium"
                            Margin="0,0,10,0"
                            Click="DeclineButton_Click"/>
                    <Button x:Name="AcceptButton"
                            Content="{localconv:Loc InvitePopupAcceptButton}"
                            Width="90"
                            Height="32"
                            Background="#8B5CF6"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="11"
                            FontWeight="Medium"
                            Click="AcceptButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>


