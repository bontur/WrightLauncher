<Window x:Class="WrightLauncher.Views.FirstUseModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:localconv="clr-namespace:WrightLauncher.Converters"
        Title="Initial Setup"
        WindowState="Maximized"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        Loaded="Window_Loaded"
        KeyDown="Window_KeyDown">
    <Window.Resources>
        <Storyboard x:Key="FadeInStoryboard">
            <DoubleAnimation Storyboard.TargetName="MainGrid"
                           Storyboard.TargetProperty="Opacity"
                           From="0"
                           To="1"
                           Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="ModalContainer"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                           From="0.8"
                           To="1"
                           Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="ModalContainer"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                           From="0.8"
                           To="1"
                           Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="FadeOutStoryboard" Completed="FadeOutStoryboard_Completed">
            <DoubleAnimation Storyboard.TargetName="MainGrid"
                           Storyboard.TargetProperty="Opacity"
                           From="1"
                           To="0"
                           Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="ModalContainer"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                           From="1"
                           To="0.9"
                           Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="ModalContainer"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                           From="1"
                           To="0.9"
                           Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Window.Resources>
    <Grid x:Name="MainGrid" Opacity="0" MouseDown="MainGrid_MouseDown">
        <Rectangle Fill="#AA000000"/>
        <Border x:Name="ModalContainer"
                Background="#2B2B2B" 
                Width="900" 
                Height="650" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                CornerRadius="15"
                BorderBrush="#7C3AED"
                BorderThickness="2"
                RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <ScaleTransform ScaleX="1" ScaleY="1"/>
            </Border.RenderTransform>
            <Border.Effect>
                <DropShadowEffect Color="#7C3AED" BlurRadius="25" ShadowDepth="0" Opacity="0.4"/>
            </Border.Effect>
            <Grid x:Name="BackgroundGrid">
                <Grid.Background>
                    <ImageBrush ImageSource="/Assets/ADV/ZedBg.png" 
                                Stretch="UniformToFill"
                                AlignmentX="Center"
                                AlignmentY="Center"
                                Opacity="0.3"/>
                </Grid.Background>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="1" ClipToBounds="False" Panel.ZIndex="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="400"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="1" 
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Center"
                                Margin="40,20,40,20">
                        <Image Source="/Assets/wrightSmall.png"
                               Width="120"
                               Height="60"
                               HorizontalAlignment="Center"
                               Margin="-20,10,0,40"
                               RenderOptions.BitmapScalingMode="HighQuality"
                               RenderOptions.EdgeMode="Aliased"/>
        <TextBlock Text="Welcome!" 
                   Foreground="#FFFFFF" 
                   FontSize="27" 
                   FontFamily="/Assets/Fonts/Unageo/Unageo-SemiBold.ttf#Unageo"
                   HorizontalAlignment="Center"
                   TextAlignment="Center"
                   TextWrapping="Wrap"
                   Margin="-20,0,0,20">
            <TextBlock.Effect>
                <DropShadowEffect Color="Black" 
                                  BlurRadius="3" 
                                  ShadowDepth="2" 
                                  Opacity="0.7"/>
            </TextBlock.Effect>
        </TextBlock>
        <TextBlock Text="Let's set up the basic settings before we begin." 
                   Foreground="#BBBBBB" 
                   FontSize="16" 
                   FontFamily="/Assets/Fonts/Unageo/Unageo-Regular.ttf#Unageo"
                   HorizontalAlignment="Center"
                   TextAlignment="Center"
                   TextWrapping="Wrap"
                   Margin="-20,0,0,40">
            <TextBlock.Effect>
                <DropShadowEffect Color="Black" 
                                  BlurRadius="3" 
                                  ShadowDepth="2" 
                                  Opacity="0.7"/>
            </TextBlock.Effect>
        </TextBlock>                        
                        <StackPanel Orientation="Vertical" Margin="0,0,0,25">
                            <TextBlock HorizontalAlignment="Left" Margin="-40,0,0,10">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="Black" 
                                                      BlurRadius="3" 
                                                      ShadowDepth="2" 
                                                      Opacity="0.7"/>
                                </TextBlock.Effect>
                                <Run Text="1) " 
                                     Foreground="#7c7c7c" 
                                     FontSize="20" 
                                     FontFamily="/Assets/Fonts/Unageo/Unageo-SemiBold.ttf#Unageo"/>
                                <Run Text="League of Legends Path" 
                                     Foreground="#FFFFFF" 
                                     FontSize="24" 
                                     FontFamily="/Assets/Fonts/Unageo/Unageo-SemiBold.ttf#Unageo"/>
                            </TextBlock>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <TextBox x:Name="GamePathTextBox" 
                                         Width="250"
                                         Height="35"
                                         Margin="0,0,10,0"
                                         Background="#36393F"
                                         Foreground="White"
                                         BorderBrush="#7C3AED"
                                         BorderThickness="2"
                                         FontSize="12"
                                         FontFamily="/Assets/Fonts/Unageo/Unageo-Regular.ttf#Unageo"
                                         VerticalContentAlignment="Center"
                                         Padding="10,0"/>
                                <Button x:Name="BrowseGamePathButton"
                                        Content="Browse" 
                                        Background="#7C3AED"
                                        Foreground="White"
                                        FontSize="12"
                                        FontFamily="/Assets/Fonts/Unageo/Unageo-Medium.ttf#Unageo"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        Click="BrowseGamePathButton_Click"
                                        Width="80"
                                        Height="35"
                                        RenderTransformOrigin="0.5,0.5">
                                    <Button.RenderTransform>
                                        <ScaleTransform x:Name="BrowseButtonScale"/>
                                    </Button.RenderTransform>
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="15"
                                                    RenderTransformOrigin="0.5,0.5">
                                                <Border.RenderTransform>
                                                    <ScaleTransform x:Name="BrowseBorderScale"/>
                                                </Border.RenderTransform>
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Trigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetName="BrowseBorderScale" 
                                                                                 Storyboard.TargetProperty="ScaleX" 
                                                                                 To="1.05" Duration="0:0:0.2"/>
                                                                <DoubleAnimation Storyboard.TargetName="BrowseBorderScale" 
                                                                                 Storyboard.TargetProperty="ScaleY" 
                                                                                 To="1.05" Duration="0:0:0.2"/>
                                                                <ColorAnimation Storyboard.TargetProperty="Background.Color" 
                                                                                To="#6B2FBF" Duration="0:0:0.2"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.EnterActions>
                                                    <Trigger.ExitActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetName="BrowseBorderScale" 
                                                                                 Storyboard.TargetProperty="ScaleX" 
                                                                                 To="1.0" Duration="0:0:0.2"/>
                                                                <DoubleAnimation Storyboard.TargetName="BrowseBorderScale" 
                                                                                 Storyboard.TargetProperty="ScaleY" 
                                                                                 To="1.0" Duration="0:0:0.2"/>
                                                                <ColorAnimation Storyboard.TargetProperty="Background.Color" 
                                                                                To="#7C3AED" Duration="0:0:0.2"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.ExitActions>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Trigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetName="BrowseBorderScale" 
                                                                                 Storyboard.TargetProperty="ScaleX" 
                                                                                 To="0.95" Duration="0:0:0.1"/>
                                                                <DoubleAnimation Storyboard.TargetName="BrowseBorderScale" 
                                                                                 Storyboard.TargetProperty="ScaleY" 
                                                                                 To="0.95" Duration="0:0:0.1"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.EnterActions>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Vertical" Margin="0,0,0,25">
                            <TextBlock HorizontalAlignment="Left" Margin="-40,0,0,10">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="Black" 
                                                      BlurRadius="3" 
                                                      ShadowDepth="2" 
                                                      Opacity="0.7"/>
                                </TextBlock.Effect>
                                <Run Text="2) " 
                                     Foreground="#7c7c7c" 
                                     FontSize="20" 
                                     FontFamily="/Assets/Fonts/Unageo/Unageo-SemiBold.ttf#Unageo"/>
                                <Run Text="Language Selection" 
                                     Foreground="#FFFFFF" 
                                     FontSize="24" 
                                     FontFamily="/Assets/Fonts/Unageo/Unageo-SemiBold.ttf#Unageo"/>
                            </TextBlock>
                            <ComboBox x:Name="LanguageComboBox" 
                                      Width="250"
                                      Height="35"
                                      FontSize="12"
                                      FontFamily="/Assets/Fonts/Unageo/Unageo-Regular.ttf#Unageo"
                                      HorizontalAlignment="Left">
                                <ComboBox.Style>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="Background" Value="#36393F"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="BorderBrush" Value="#7C3AED"/>
                                        <Setter Property="BorderThickness" Value="2"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ComboBox">
                                                    <Grid>
                                                        <Border x:Name="Border"
                                                                Background="{TemplateBinding Background}"
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                CornerRadius="5">
                                                            <Grid>
                                                                <ContentPresenter x:Name="ContentSite"
                                                                                IsHitTestVisible="False"
                                                                                Content="{TemplateBinding SelectionBoxItem}"
                                                                                ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                                ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                                                Margin="8,3,23,3"
                                                                                VerticalAlignment="Center"
                                                                                HorizontalAlignment="Left"/>
                                                                <ToggleButton x:Name="ToggleButton"
                                                                            Template="{DynamicResource ComboBoxToggleButton}"
                                                                            Grid.Column="2"
                                                                            Focusable="false"
                                                                            IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}"
                                                                            ClickMode="Press">
                                                                    <ToggleButton.Style>
                                                                        <Style TargetType="ToggleButton">
                                                                            <Setter Property="Background" Value="Transparent"/>
                                                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                                                            <Setter Property="Template">
                                                                                <Setter.Value>
                                                                                    <ControlTemplate TargetType="ToggleButton">
                                                                                        <Border Background="{TemplateBinding Background}"
                                                                                                BorderBrush="{TemplateBinding BorderBrush}">
                                                                                            <Path x:Name="Arrow"
                                                                                                  Fill="White"
                                                                                                  HorizontalAlignment="Center"
                                                                                                  VerticalAlignment="Center"
                                                                                                  Data="M 0 0 L 4 4 L 8 0 Z"/>
                                                                                        </Border>
                                                                                        <ControlTemplate.Triggers>
                                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                                <Setter TargetName="Arrow" Property="Fill" Value="#7C3AED"/>
                                                                                            </Trigger>
                                                                                        </ControlTemplate.Triggers>
                                                                                    </ControlTemplate>
                                                                                </Setter.Value>
                                                                            </Setter>
                                                                        </Style>
                                                                    </ToggleButton.Style>
                                                                </ToggleButton>
                                                            </Grid>
                                                        </Border>
                                                        <Popup x:Name="Popup"
                                                               Placement="Bottom"
                                                               IsOpen="{TemplateBinding IsDropDownOpen}"
                                                               AllowsTransparency="True"
                                                               Focusable="False"
                                                               PopupAnimation="Slide">
                                                            <Grid x:Name="DropDown"
                                                                  SnapsToDevicePixels="True"
                                                                  MinWidth="{TemplateBinding ActualWidth}"
                                                                  MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                                                <Border x:Name="DropDownBorder"
                                                                        Background="#2F3136"
                                                                        BorderThickness="2"
                                                                        BorderBrush="#7C3AED"
                                                                        CornerRadius="5">
                                                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                                                    </ScrollViewer>
                                                                </Border>
                                                            </Grid>
                                                        </Popup>
                                                    </Grid>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="Border" Property="BorderBrush" Value="#8B5CF6"/>
                                                            <Setter TargetName="Border" Property="Background" Value="#40444B"/>
                                                        </Trigger>
                                                        <Trigger Property="IsDropDownOpen" Value="True">
                                                            <Setter TargetName="Border" Property="BorderBrush" Value="#8B5CF6"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ComboBox.Style>
                                <ComboBox.ItemContainerStyle>
                                    <Style TargetType="ComboBoxItem">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="Padding" Value="8,5"/>
                                        <Setter Property="FontFamily" Value="/Assets/Fonts/Unageo/Unageo-Regular.ttf#Unageo"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ComboBoxItem">
                                                    <Border x:Name="ItemBorder"
                                                            Background="{TemplateBinding Background}"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsHighlighted" Value="True">
                                                            <Setter TargetName="ItemBorder" Property="Background" Value="#7C3AED"/>
                                                        </Trigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="ItemBorder" Property="Background" Value="#7C3AED"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ComboBox.ItemContainerStyle>
                                <ComboBoxItem Content="Türkçe" Tag="tr_TR"/>
                                <ComboBoxItem Content="English" Tag="en_US"/>
                                <ComboBoxItem Content="Deutsch" Tag="de_DE"/>
                                <ComboBoxItem Content="Français" Tag="fr_FR"/>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="-40,20,0,0">
                            <Button x:Name="SaveButton"
                                    Content="Save and Continue" 
                                    Background="#7C3AED"
                                    Foreground="White"
                                    FontSize="14"
                                    FontFamily="/Assets/Fonts/Unageo/Unageo-Medium.ttf#Unageo"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Width="150"
                                    Height="40"
                                    Margin="0,0,15,0"
                                    Click="SaveButton_Click"
                                    RenderTransformOrigin="0.5,0.5">
                                <Button.RenderTransform>
                                    <ScaleTransform x:Name="SaveButtonScale"/>
                                </Button.RenderTransform>
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="20"
                                                RenderTransformOrigin="0.5,0.5">
                                            <Border.RenderTransform>
                                                <ScaleTransform x:Name="SaveBorderScale"/>
                                            </Border.RenderTransform>
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Trigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="SaveBorderScale"
                                                                             Storyboard.TargetProperty="ScaleX"
                                                                             To="1.05"
                                                                             Duration="0:0:0.2"/>
                                                            <DoubleAnimation Storyboard.TargetName="SaveBorderScale"
                                                                             Storyboard.TargetProperty="ScaleY"
                                                                             To="1.05"
                                                                             Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetProperty="Background.Color"
                                                                            To="#6B2FBF"
                                                                            Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.EnterActions>
                                                <Trigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="SaveBorderScale"
                                                                             Storyboard.TargetProperty="ScaleX"
                                                                             To="1.0"
                                                                             Duration="0:0:0.2"/>
                                                            <DoubleAnimation Storyboard.TargetName="SaveBorderScale"
                                                                             Storyboard.TargetProperty="ScaleY"
                                                                             To="1.0"
                                                                             Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetProperty="Background.Color"
                                                                            To="#7C3AED"
                                                                            Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.ExitActions>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Trigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="SaveBorderScale"
                                                                             Storyboard.TargetProperty="ScaleX"
                                                                             To="0.95"
                                                                             Duration="0:0:0.1"/>
                                                            <DoubleAnimation Storyboard.TargetName="SaveBorderScale"
                                                                             Storyboard.TargetProperty="ScaleY"
                                                                             To="0.95"
                                                                             Duration="0:0:0.1"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.EnterActions>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <Button Content="Skip" 
                                    Background="Transparent"
                                    Foreground="#BBBBBB"
                                    FontSize="14"
                                    FontFamily="/Assets/Fonts/Unageo/Unageo-Medium.ttf#Unageo"
                                    BorderThickness="0"
                                    Click="SkipButton_Click" 
                                    Cursor="Hand"
                                    Width="100"
                                    Height="40"
                                    RenderTransformOrigin="0.5,0.5">
                                <Button.RenderTransform>
                                    <ScaleTransform x:Name="SkipButtonScale"/>
                                </Button.RenderTransform>
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="#555555"
                                                BorderThickness="2"
                                                CornerRadius="20"
                                                RenderTransformOrigin="0.5,0.5">
                                            <Border.RenderTransform>
                                                <ScaleTransform x:Name="SkipBorderScale"/>
                                            </Border.RenderTransform>
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Trigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="SkipBorderScale"
                                                                             Storyboard.TargetProperty="ScaleX"
                                                                             To="1.05"
                                                                             Duration="0:0:0.2"/>
                                                            <DoubleAnimation Storyboard.TargetName="SkipBorderScale"
                                                                             Storyboard.TargetProperty="ScaleY"
                                                                             To="1.05"
                                                                             Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetProperty="Foreground.Color"
                                                                            To="#FFFFFF"
                                                                            Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetProperty="BorderBrush.Color"
                                                                            To="#777777"
                                                                            Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.EnterActions>
                                                <Trigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="SkipBorderScale"
                                                                             Storyboard.TargetProperty="ScaleX"
                                                                             To="1.0"
                                                                             Duration="0:0:0.2"/>
                                                            <DoubleAnimation Storyboard.TargetName="SkipBorderScale"
                                                                             Storyboard.TargetProperty="ScaleY"
                                                                             To="1.0"
                                                                             Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetProperty="Foreground.Color"
                                                                            To="#BBBBBB"
                                                                            Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetProperty="BorderBrush.Color"
                                                                            To="#555555"
                                                                            Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.ExitActions>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Trigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="SkipBorderScale"
                                                                             Storyboard.TargetProperty="ScaleX"
                                                                             To="0.95"
                                                                             Duration="0:0:0.1"/>
                                                            <DoubleAnimation Storyboard.TargetName="SkipBorderScale"
                                                                             Storyboard.TargetProperty="ScaleY"
                                                                             To="0.95"
                                                                             Duration="0:0:0.1"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.EnterActions>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Grid>
                <Image x:Name="ChampionImage"
                       Grid.Row="0" 
                       Grid.RowSpan="2"
                       Source="/Assets/ADV/Zed.png" 
                       Stretch="None"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"
                       Panel.ZIndex="1"
                       Margin="-317,0,0,0"/>
            </Grid>
        </Border>
    </Grid>
</Window>



