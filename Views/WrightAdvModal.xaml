<Window x:Class="WrightLauncher.Views.WrightAdvModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:localconv="clr-namespace:WrightLauncher.Converters"
        Title="Wright ADV"
        WindowState="Maximized"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        Loaded="Window_Loaded"
        KeyDown="Window_KeyDown">
    <Window.Resources>
        <Storyboard x:Key="FadeInStoryboard">
            <DoubleAnimation Storyboard.TargetName="MainGrid"
                           Storyboard.TargetProperty="Opacity"
                           From="0"
                           To="1"
                           Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="ModalContainer"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                           From="0.8"
                           To="1"
                           Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="ModalContainer"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                           From="0.8"
                           To="1"
                           Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="FadeOutStoryboard" Completed="FadeOutStoryboard_Completed">
            <DoubleAnimation Storyboard.TargetName="MainGrid"
                           Storyboard.TargetProperty="Opacity"
                           From="1"
                           To="0"
                           Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="ModalContainer"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                           From="1"
                           To="0.9"
                           Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="ModalContainer"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                           From="1"
                           To="0.9"
                           Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Window.Resources>
    <Grid x:Name="MainGrid" Opacity="0" MouseDown="MainGrid_MouseDown">
        <Rectangle Fill="#AA000000"/>
        <Border x:Name="ModalContainer"
                Background="#2B2B2B" 
                Width="900" 
                Height="650" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                CornerRadius="15"
                BorderBrush="#7C3AED"
                BorderThickness="2"
                RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <ScaleTransform ScaleX="1" ScaleY="1"/>
            </Border.RenderTransform>
            <Border.Effect>
                <DropShadowEffect Color="#7C3AED" BlurRadius="25" ShadowDepth="0" Opacity="0.4"/>
            </Border.Effect>
            <Grid x:Name="BackgroundGrid">
                <Grid.Background>
                    <ImageBrush ImageSource="/Assets/ADV/ZedBg.png" 
                                Stretch="UniformToFill"
                                AlignmentX="Center"
                                AlignmentY="Center"
                                Opacity="0.3"/>
                </Grid.Background>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button Name="CloseModalButton" 
                        Grid.Row="0"
                        Content="✕"
                        Click="CloseModalButton_Click" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center"
                        Width="30" 
                        Height="30" 
                        Margin="0,0,15,0"
                        Background="Transparent"
                        Foreground="#FF6B6B"
                        FontSize="16"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Panel.ZIndex="30">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#FF6B6B"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="15"
                                                x:Name="ButtonBorder">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                            <Border.RenderTransform>
                                                <ScaleTransform x:Name="ButtonScale" ScaleX="1" ScaleY="1"/>
                                            </Border.RenderTransform>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Trigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="ButtonScale" 
                                                                             Storyboard.TargetProperty="ScaleX" 
                                                                             To="1.1" Duration="0:0:0.2"/>
                                                            <DoubleAnimation Storyboard.TargetName="ButtonScale" 
                                                                             Storyboard.TargetProperty="ScaleY" 
                                                                             To="1.1" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="ButtonBorder" 
                                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" 
                                                                            To="#33FF6B6B" Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.EnterActions>
                                                <Trigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="ButtonScale" 
                                                                             Storyboard.TargetProperty="ScaleX" 
                                                                             To="1" Duration="0:0:0.2"/>
                                                            <DoubleAnimation Storyboard.TargetName="ButtonScale" 
                                                                             Storyboard.TargetProperty="ScaleY" 
                                                                             To="1" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="ButtonBorder" 
                                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" 
                                                                            To="Transparent" Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.ExitActions>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Trigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="ButtonScale" 
                                                                             Storyboard.TargetProperty="ScaleX" 
                                                                             To="0.95" Duration="0:0:0.1"/>
                                                            <DoubleAnimation Storyboard.TargetName="ButtonScale" 
                                                                             Storyboard.TargetProperty="ScaleY" 
                                                                             To="0.95" Duration="0:0:0.1"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.EnterActions>
                                                <Trigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="ButtonScale" 
                                                                             Storyboard.TargetProperty="ScaleX" 
                                                                             To="1.1" Duration="0:0:0.1"/>
                                                            <DoubleAnimation Storyboard.TargetName="ButtonScale" 
                                                                             Storyboard.TargetProperty="ScaleY" 
                                                                             To="1.1" Duration="0:0:0.1"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.ExitActions>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
                <Grid Grid.Row="1" ClipToBounds="False" Panel.ZIndex="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="400"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="1" 
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Center"
                                Margin="40,20,40,20">
                        <Image Source="/Assets/wrightSmall.png"
                               Width="120"
                               Height="60"
                               HorizontalAlignment="Center"
                               Margin="-20,10,0,40"
                               RenderOptions.BitmapScalingMode="HighQuality"
                               RenderOptions.EdgeMode="Aliased"/>
                        <TextBlock Text="{localconv:Loc ADVMainMessage}" 
                                   Foreground="#FFFFFF" 
                                   FontSize="27" 
                                   FontFamily="/Assets/Fonts/Unageo/Unageo-SemiBold.ttf#Unageo"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Margin="-20,0,0,40">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="Black" 
                                                  BlurRadius="3" 
                                                  ShadowDepth="2" 
                                                  Opacity="0.7"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <StackPanel Orientation="Vertical" Margin="0,0,0,20">
                            <TextBlock HorizontalAlignment="Left" Margin="-40,0,0,10">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="Black" 
                                                      BlurRadius="3" 
                                                      ShadowDepth="2" 
                                                      Opacity="0.7"/>
                                </TextBlock.Effect>
                                <Run Text="1) " 
                                     Foreground="#7c7c7c" 
                                     FontSize="20" 
                                     FontFamily="/Assets/Fonts/Unageo/Unageo-SemiBold.ttf#Unageo"/>
                                <Run Text="{localconv:Loc ADVStepOneMessage}" 
                                     Foreground="#FFFFFF" 
                                     FontSize="24" 
                                     FontFamily="/Assets/Fonts/Unageo/Unageo-SemiBold.ttf#Unageo"/>
                            </TextBlock>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
                                <Border x:Name="AdvModalDiscordStatusBorder"
                                        Background="#36393F" 
                                        CornerRadius="14" 
                                        Width="220"
                                        Height="40"
                                        Margin="0,0,10,0"
                                        BorderThickness="2"
                                        BorderBrush="#43B581">
                                    <StackPanel Orientation="Horizontal" 
                                                VerticalAlignment="Center" 
                                                HorizontalAlignment="Left"
                                                Margin="15,0,0,0">
                                        <Border x:Name="AdvModalDiscordAvatarBorder" 
                                                Width="24" 
                                                Height="24" 
                                                CornerRadius="12"
                                                Margin="0,0,10,0">
                                            <Border.Background>
                                                <ImageBrush x:Name="AdvModalDiscordUserAvatar" 
                                                            Stretch="UniformToFill"/>
                                            </Border.Background>
                                            <TextBlock x:Name="AdvModalDiscordAvatarFallback" 
                                                       Text="D" 
                                                       Foreground="White" 
                                                       FontSize="12" 
                                                       FontWeight="Bold"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock x:Name="AdvModalDiscordUsername" 
                                                   Text="Discord Kullanıcı" 
                                                   Foreground="#FFFFFF" 
                                                   FontSize="14" 
                                                   FontFamily="/Assets/Fonts/Unageo/Unageo-Regular.ttf#Unageo"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                <Button x:Name="AdvModalDisconnectButton" 
                                        Content="{localconv:Loc ADVDisconnectButton}" 
                                        Background="#E74C3C"
                                        Foreground="White"
                                        FontSize="12"
                                        FontFamily="/Assets/Fonts/Unageo/Unageo-Medium.ttf#Unageo"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        Click="AdvModalDisconnectButton_Click"
                                        Width="100"
                                        Height="30"
                                        RenderTransformOrigin="0.5,0.5">
                                    <Button.RenderTransform>
                                        <ScaleTransform x:Name="DisconnectButtonScale"/>
                                    </Button.RenderTransform>
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="15"
                                                    RenderTransformOrigin="0.5,0.5">
                                                <Border.RenderTransform>
                                                    <ScaleTransform x:Name="DisconnectBorderScale"/>
                                                </Border.RenderTransform>
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Trigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetName="DisconnectBorderScale" 
                                                                                 Storyboard.TargetProperty="ScaleX" 
                                                                                 To="1.05" Duration="0:0:0.2"/>
                                                                <DoubleAnimation Storyboard.TargetName="DisconnectBorderScale" 
                                                                                 Storyboard.TargetProperty="ScaleY" 
                                                                                 To="1.05" Duration="0:0:0.2"/>
                                                                <ColorAnimation Storyboard.TargetProperty="Background.Color" 
                                                                                To="#C0392B" Duration="0:0:0.2"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.EnterActions>
                                                    <Trigger.ExitActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetName="DisconnectBorderScale" 
                                                                                 Storyboard.TargetProperty="ScaleX" 
                                                                                 To="1.0" Duration="0:0:0.2"/>
                                                                <DoubleAnimation Storyboard.TargetName="DisconnectBorderScale" 
                                                                                 Storyboard.TargetProperty="ScaleY" 
                                                                                 To="1.0" Duration="0:0:0.2"/>
                                                                <ColorAnimation Storyboard.TargetProperty="Background.Color" 
                                                                                To="#E74C3C" Duration="0:0:0.2"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.ExitActions>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Trigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetName="DisconnectBorderScale" 
                                                                                 Storyboard.TargetProperty="ScaleX" 
                                                                                 To="0.95" Duration="0:0:0.1"/>
                                                                <DoubleAnimation Storyboard.TargetName="DisconnectBorderScale" 
                                                                                 Storyboard.TargetProperty="ScaleY" 
                                                                                 To="0.95" Duration="0:0:0.1"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.EnterActions>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button x:Name="AdvModalConnectButton" 
                                        Content="{localconv:Loc ADVConnectButton}" 
                                        Background="#7C3AED"
                                        Foreground="White"
                                        FontSize="12"
                                        FontFamily="/Assets/Fonts/Unageo/Unageo-Medium.ttf#Unageo"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        Click="AdvModalConnectButton_Click"
                                        Width="100"
                                        Height="30"
                                        Visibility="Collapsed"
                                        RenderTransformOrigin="0.5,0.5">
                                    <Button.RenderTransform>
                                        <ScaleTransform x:Name="ConnectButtonScale"/>
                                    </Button.RenderTransform>
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="15"
                                                    RenderTransformOrigin="0.5,0.5">
                                                <Border.RenderTransform>
                                                    <ScaleTransform x:Name="ConnectBorderScale"/>
                                                </Border.RenderTransform>
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Trigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetName="ConnectBorderScale" 
                                                                                 Storyboard.TargetProperty="ScaleX" 
                                                                                 To="1.05" Duration="0:0:0.2"/>
                                                                <DoubleAnimation Storyboard.TargetName="ConnectBorderScale" 
                                                                                 Storyboard.TargetProperty="ScaleY" 
                                                                                 To="1.05" Duration="0:0:0.2"/>
                                                                <ColorAnimation Storyboard.TargetProperty="Background.Color" 
                                                                                To="#6B2FBF" Duration="0:0:0.2"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.EnterActions>
                                                    <Trigger.ExitActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetName="ConnectBorderScale" 
                                                                                 Storyboard.TargetProperty="ScaleX" 
                                                                                 To="1.0" Duration="0:0:0.2"/>
                                                                <DoubleAnimation Storyboard.TargetName="ConnectBorderScale" 
                                                                                 Storyboard.TargetProperty="ScaleY" 
                                                                                 To="1.0" Duration="0:0:0.2"/>
                                                                <ColorAnimation Storyboard.TargetProperty="Background.Color" 
                                                                                To="#7C3AED" Duration="0:0:0.2"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.ExitActions>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Trigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetName="ConnectBorderScale" 
                                                                                 Storyboard.TargetProperty="ScaleX" 
                                                                                 To="0.95" Duration="0:0:0.1"/>
                                                                <DoubleAnimation Storyboard.TargetName="ConnectBorderScale" 
                                                                                 Storyboard.TargetProperty="ScaleY" 
                                                                                 To="0.95" Duration="0:0:0.1"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.EnterActions>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Vertical" Margin="0,0,0,20">
                            <TextBlock HorizontalAlignment="Left" Margin="-40,0,0,10">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="Black" 
                                                      BlurRadius="3" 
                                                      ShadowDepth="2" 
                                                      Opacity="0.7"/>
                                </TextBlock.Effect>
                                <Run Text="2) " 
                                     Foreground="#7c7c7c" 
                                     FontSize="20" 
                                     FontFamily="/Assets/Fonts/Unageo/Unageo-SemiBold.ttf#Unageo"/>
                                <Run Text="{localconv:Loc ADVStepTwoMessage}" 
                                     Foreground="#FFFFFF" 
                                     FontSize="24" 
                                     FontFamily="/Assets/Fonts/Unageo/Unageo-SemiBold.ttf#Unageo"/>
                            </TextBlock>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <Button Content="{localconv:Loc ADVClickButton}" 
                                        Background="#7289DA"
                                        Foreground="White"
                                        FontSize="14"
                                        FontFamily="/Assets/Fonts/Unageo/Unageo-Medium.ttf#Unageo"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        Width="120"
                                        Height="40"
                                        Margin="0,0,15,0"
                                        Command="{Binding JoinDiscordCommand}"
                                        Click="CloseModalButton_Click" 
                                        RenderTransformOrigin="0.5,0.5">
                                    <Button.RenderTransform>
                                        <ScaleTransform x:Name="DiscordButtonScale"/>
                                    </Button.RenderTransform>
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="20"
                                                    RenderTransformOrigin="0.5,0.5">
                                                <Border.RenderTransform>
                                                    <ScaleTransform x:Name="DiscordBorderScale"/>
                                                </Border.RenderTransform>
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Trigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetName="DiscordBorderScale" 
                                                                                 Storyboard.TargetProperty="ScaleX" 
                                                                                 To="1.05" Duration="0:0:0.2"/>
                                                                <DoubleAnimation Storyboard.TargetName="DiscordBorderScale" 
                                                                                 Storyboard.TargetProperty="ScaleY" 
                                                                                 To="1.05" Duration="0:0:0.2"/>
                                                                <ColorAnimation Storyboard.TargetProperty="Background.Color" 
                                                                                To="#5B6EAE" Duration="0:0:0.2"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.EnterActions>
                                                    <Trigger.ExitActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetName="DiscordBorderScale" 
                                                                                 Storyboard.TargetProperty="ScaleX" 
                                                                                 To="1.0" Duration="0:0:0.2"/>
                                                                <DoubleAnimation Storyboard.TargetName="DiscordBorderScale" 
                                                                                 Storyboard.TargetProperty="ScaleY" 
                                                                                 To="1.0" Duration="0:0:0.2"/>
                                                                <ColorAnimation Storyboard.TargetProperty="Background.Color" 
                                                                                To="#7289DA" Duration="0:0:0.2"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.ExitActions>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Trigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetName="DiscordBorderScale" 
                                                                                 Storyboard.TargetProperty="ScaleX" 
                                                                                 To="0.95" Duration="0:0:0.1"/>
                                                                <DoubleAnimation Storyboard.TargetName="DiscordBorderScale" 
                                                                                 Storyboard.TargetProperty="ScaleY" 
                                                                                 To="0.95" Duration="0:0:0.1"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.EnterActions>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <TextBlock Text="{localconv:Loc ADVOrText}" 
                                           Foreground="#FFFFFF" 
                                           FontSize="14" 
                                           FontFamily="/Assets/Fonts/Unageo/Unageo-Regular.ttf#Unageo"
                                           VerticalAlignment="Center"
                                           Margin="0,0,15,0"/>
                                <Border Background="#2C2F33" 
                                        CornerRadius="20" 
                                        Width="200"
                                        Height="40">
                                    <TextBlock Text="bontur.com.tr/discord" 
                                               Foreground="#FFFFFF" 
                                               FontSize="14" 
                                               FontFamily="/Assets/Fonts/Unageo/Unageo-Regular.ttf#Unageo"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Vertical" Margin="-40,0,0,30">
                            <TextBlock HorizontalAlignment="Left" Margin="0,0,0,15">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="Black" 
                                                      BlurRadius="3" 
                                                      ShadowDepth="2" 
                                                      Opacity="0.7"/>
                                </TextBlock.Effect>
                                <Run Text="3) " 
                                     Foreground="#7c7c7c" 
                                     FontSize="20" 
                                     FontFamily="/Assets/Fonts/Unageo/Unageo-SemiBold.ttf#Unageo"/>
                                <Run Text="{localconv:Loc ADVStepThreeMessage}" 
                                     Foreground="#FFFFFF" 
                                     FontSize="24" 
                                     FontFamily="/Assets/Fonts/Unageo/Unageo-SemiBold.ttf#Unageo"/>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="-40,0,0,0">
                            <Button x:Name="AdvModalKontrolEtButton"
                                    Content="{localconv:Loc ADVCheckButton}" 
                                    Background="Transparent"
                                    Foreground="#7C3AED"
                                    FontSize="14"
                                    FontFamily="/Assets/Fonts/Unageo/Unageo-Medium.ttf#Unageo"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Width="100"
                                    Height="40"
                                    Margin="0,0,15,0"
                                    IsEnabled="{Binding IsDiscordConnected}"
                                    Click="AdvModalKontrolEtButton_Click"
                                    RenderTransformOrigin="0.5,0.5">
                                <Button.RenderTransform>
                                    <ScaleTransform x:Name="KontrolEtScaleTransform"/>
                                </Button.RenderTransform>
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="#7C3AED"
                                                BorderThickness="2"
                                                CornerRadius="20"
                                                RenderTransformOrigin="0.5,0.5">
                                            <Border.RenderTransform>
                                                <ScaleTransform x:Name="KontrolEtButtonScaleTransform"/>
                                            </Border.RenderTransform>
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Trigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="KontrolEtButtonScaleTransform"
                                                                             Storyboard.TargetProperty="ScaleX"
                                                                             To="1.05"
