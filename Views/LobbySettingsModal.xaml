<Window x:Class="WrightLauncher.Views.LobbySettingsModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:WrightLauncher.Converters"
        xmlns:localconv="clr-namespace:WrightLauncher.Converters"
        Title="Lobi Ayarları"
        WindowState="Maximized"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True">
    <Window.Resources>
        <converters:FirstCharConverter x:Key="FirstCharConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0F0E17" Offset="0"/>
            <GradientStop Color="#1A1625" Offset="0.5"/>
            <GradientStop Color="#0F0E17" Offset="1"/>
        </LinearGradientBrush>
        <SolidColorBrush x:Key="TextBrush" Color="#F1F5F9"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#94A3B8"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#7C3AED"/>
        <SolidColorBrush x:Key="CardBrush" Color="#1E1E2E"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#38A169"/>
        <Style x:Key="ToggleSwitchStyle" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Border x:Name="SwitchBackground"
                                    Width="48" Height="24"
                                    CornerRadius="12"
                                    Background="#4A5568"
                                    BorderThickness="1"
                                    BorderBrush="#2D3748">
                                <Border.Effect>
                                    <DropShadowEffect Color="#000000" BlurRadius="3" Opacity="0.3" ShadowDepth="1"/>
                                </Border.Effect>
                            </Border>
                            <Ellipse x:Name="SwitchThumb"
                                     Width="18" Height="18"
                                     Fill="#F7FAFC"
                                     HorizontalAlignment="Left"
                                     Margin="3,0,0,0">
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="#000000" BlurRadius="2" Opacity="0.2" ShadowDepth="1"/>
                                </Ellipse.Effect>
                                <Ellipse.RenderTransform>
                                    <TranslateTransform x:Name="ThumbTransform" X="0"/>
                                </Ellipse.RenderTransform>
                            </Ellipse>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="SwitchBackground" Property="Background" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="SwitchBackground" Property="BorderBrush" Value="#553C9A"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard Name="SwitchOnStoryboard">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ThumbTransform" 
                                                           Storyboard.TargetProperty="X" 
                                                           To="24" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard Name="SwitchOffStoryboard">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ThumbTransform" 
                                                           Storyboard.TargetProperty="X" 
                                                           To="0" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="SwitchBackground" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="{Binding Source={StaticResource AccentBrush}, Path=Color}" BlurRadius="8" Opacity="0.3" ShadowDepth="0"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Rectangle Fill="#80000000" 
                   Opacity="0.7" 
                   MouseLeftButtonDown="CloseModal"/>
        <Border Background="{StaticResource PrimaryGradient}" 
                CornerRadius="12"
                BorderThickness="1"
                BorderBrush="{StaticResource AccentBrush}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="800"
                Height="500">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="20" Opacity="0.5" ShadowDepth="5"/>
            </Border.Effect>
            <Grid Margin="30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="1.5*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Grid.ColumnSpan="3" Margin="0,0,0,20">
                    <TextBlock Text="{localconv:Loc LobbySettingTitle}" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="{StaticResource TextBrush}"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#7C3AED" BlurRadius="8" Opacity="0.4" ShadowDepth="0"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <Button Content="✕" 
                            Width="30" Height="30"
                            Background="Transparent"
                            Foreground="{StaticResource TextBrush}"
                            BorderThickness="0"
                            FontSize="16"
                            FontWeight="Bold"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Cursor="Hand"
                            Click="CloseModal">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="15">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#E53E3E"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
                <ScrollViewer Grid.Row="1" Grid.Column="0" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <Border Background="{StaticResource CardBrush}" 
                                CornerRadius="8" 
                                Padding="20"
                                Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="{localconv:Loc LobbySettingUploadPermissions}" 
                                           FontSize="18" 
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextBrush}"
                                           Margin="0,0,0,15"/>
                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{localconv:Loc LobbySettingEveryoneCanUpload}" 
                                                   FontSize="14" 
                                                   FontWeight="Medium"
                                                   Foreground="{StaticResource TextBrush}"/>
                                        <TextBlock Text="{localconv:Loc LobbySettingEveryoneCanUploadDesc}" 
                                                   FontSize="12" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                    <CheckBox x:Name="EveryoneCanUploadCheckBox"
                                              Grid.Column="1"
                                              VerticalAlignment="Center"
                                              IsChecked="False"
                                              Style="{StaticResource ToggleSwitchStyle}"
                                              Checked="EveryoneCanUploadCheckBox_Changed"
                                              Unchecked="EveryoneCanUploadCheckBox_Changed"/>
                                </Grid>
                                <Border x:Name="IndividualPermissionsPanel"
                                        Background="{StaticResource PrimaryGradient}"
                                        CornerRadius="6"
                                        Padding="15">
                                    <StackPanel>
                                        <TextBlock Text="{localconv:Loc LobbySettingIndividualPermissions}" 
                                                   FontSize="14" 
                                                   FontWeight="Medium"
                                                   Foreground="{StaticResource TextBrush}"
                                                   Margin="0,0,0,10"/>
                                        <ScrollViewer x:Name="MembersScrollViewer" 
                                                      MaxHeight="200" 
                                                      VerticalScrollBarVisibility="Auto">
                                            <ItemsControl x:Name="LobbyMembersItemsControl">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Background="{StaticResource PrimaryGradient}"
                                                                CornerRadius="6"
                                                                Padding="12,8"
                                                                Margin="0,4">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>
                                                                <Border Grid.Column="0"
                                                                        Width="32" Height="32"
                                                                        CornerRadius="16"
                                                                        Margin="0,0,10,0">
                                                                    <Border.Background>
                                                                        <ImageBrush ImageSource="{Binding AvatarUrl}" 
                                                                                    Stretch="UniformToFill"/>
                                                                    </Border.Background>
                                                                    <Border Background="#7C3AED" CornerRadius="16">
                                                                        <TextBlock Text="{Binding Username, Converter={StaticResource FirstCharConverter}}" 
                                                                                   FontSize="14" 
                                                                                   FontWeight="SemiBold"
                                                                                   Foreground="White"
                                                                                   HorizontalAlignment="Center"
                                                                                   VerticalAlignment="Center"/>
                                                                        <Border.Style>
                                                                            <Style TargetType="Border">
                                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                                <Style.Triggers>
                                                                                    <DataTrigger Binding="{Binding AvatarUrl}" Value="{x:Null}">
                                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                                    </DataTrigger>
                                                                                    <DataTrigger Binding="{Binding AvatarUrl}" Value="">
                                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                                    </DataTrigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </Border.Style>
                                                                    </Border>
                                                                </Border>
                                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                                    <TextBlock Text="{Binding Username}" 
                                                                               FontSize="14"
                                                                               FontWeight="Medium"
                                                                               Foreground="{StaticResource TextBrush}"/>
                                                                    <TextBlock Text="{Binding DiscordId, StringFormat='#{0}'}" 
                                                                               FontSize="11"
                                                                               Foreground="{StaticResource TextSecondaryBrush}"
                                                                               Visibility="{Binding DiscordId, Converter={StaticResource StringToVisibilityConverter}}"/>
                                                                </StackPanel>
                                                                <CheckBox Grid.Column="2"
                                                                          IsChecked="{Binding CanUpload, Mode=TwoWay}"
                                                                          Tag="{Binding UserId}"
                                                                          Style="{StaticResource ToggleSwitchStyle}"
                                                                          Checked="MemberPermissionCheckBox_Changed"
                                                                          Unchecked="MemberPermissionCheckBox_Changed"
                                                                          VerticalAlignment="Center"/>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
                <Border Grid.Row="1" Grid.Column="2" 
                        Background="{StaticResource CardBrush}" 
                        CornerRadius="8" 
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="{localconv:Loc LobbySettingMembers}" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextBrush}"
                                   Margin="0,0,0,15"/>
                        <ScrollViewer MaxHeight="350" VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="KickableMembersItemsControl">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource PrimaryGradient}"
                                                CornerRadius="6"
                                                Padding="12,8"
                                                Margin="0,4">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Border Grid.Column="0"
                                                        Width="32" Height="32"
                                                        CornerRadius="16"
                                                        Margin="0,0,10,0">
                                                    <Border.Background>
                                                        <ImageBrush ImageSource="{Binding AvatarUrl}" 
                                                                    Stretch="UniformToFill"/>
                                                    </Border.Background>
                                                    <Border Background="#7C3AED" CornerRadius="16">
                                                        <TextBlock Text="{Binding Username, Converter={StaticResource FirstCharConverter}}" 
                                                                   FontSize="14" 
                                                                   FontWeight="SemiBold"
                                                                   Foreground="White"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"/>
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding AvatarUrl}" Value="{x:Null}">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding AvatarUrl}" Value="">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                    </Border>
                                                </Border>
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Username}" 
                                                               FontSize="13"
                                                               FontWeight="Medium"
                                                               Foreground="{StaticResource TextBrush}"/>
                                                    <TextBlock Text="{Binding DiscordId, StringFormat='#{0}'}" 
                                                               FontSize="10"
                                                               Foreground="{StaticResource TextSecondaryBrush}"
                                                               Visibility="{Binding DiscordId, Converter={StaticResource StringToVisibilityConverter}}"/>
                                                </StackPanel>
                                                <Button Grid.Column="2"
                                                        Content="👞"
                                                        Width="28" Height="28"
                                                        Background="#E53E3E"
                                                        Foreground="White"
                                                        BorderThickness="0"
                                                        FontSize="14"
                                                        VerticalAlignment="Center"
                                                        Cursor="Hand"
                                                        Tag="{Binding UserId}"
                                                        Click="KickMember"
                                                        ToolTip="{localconv:Loc LobbySettingKickTooltip}">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border Background="{TemplateBinding Background}"
                                                                                CornerRadius="14"
                                                                                Padding="{TemplateBinding Padding}">
                                                                            <ContentPresenter HorizontalAlignment="Center" 
                                                                                            VerticalAlignment="Center"/>
                                                                        </Border>
                                                                        <ControlTemplate.Triggers>
                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                <Setter Property="Background" Value="#C53030"/>
                                                                            </Trigger>
                                                                        </ControlTemplate.Triggers>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
                <Grid Grid.Row="2" Grid.ColumnSpan="3" Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="1"
                            Content="{localconv:Loc LobbySettingCancelButton}"
                            Background="{StaticResource CardBrush}"
                            Foreground="{StaticResource TextSecondaryBrush}"
                            BorderBrush="{StaticResource TextSecondaryBrush}"
                            BorderThickness="1"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Padding="20,10"
                            Margin="0,0,10,0"
                            Cursor="Hand"
                            Click="CloseModal">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="8"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Grid.Column="2"
                            Content="{localconv:Loc LobbySettingSaveButton}"
                            Background="{StaticResource SuccessBrush}"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Padding="20,10"
                            Cursor="Hand"
                            Click="SaveSettings">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="8"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#2F855A"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>


