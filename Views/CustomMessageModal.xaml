<Window x:Class="WrightLauncher.Views.CustomMessageModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:localconv="clr-namespace:WrightLauncher.Converters"
        Title="Mesaj"
        WindowState="Maximized"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True">
    <Window.Resources>
        <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0F0E17" Offset="0"/>
            <GradientStop Color="#1A1625" Offset="0.5"/>
            <GradientStop Color="#0F0E17" Offset="1"/>
        </LinearGradientBrush>
        <SolidColorBrush x:Key="TextBrush" Color="#F1F5F9"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#94A3B8"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#7C3AED"/>
        <SolidColorBrush x:Key="CardBrush" Color="#1E1E2E"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#E53E3E"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#38A169"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#D69E2E"/>
    </Window.Resources>
    <Grid>
        <Rectangle Fill="#80000000" 
                   Opacity="0.7"/>
        <Border Background="{StaticResource PrimaryGradient}" 
                CornerRadius="12"
                BorderThickness="1"
                BorderBrush="{StaticResource AccentBrush}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="450"
                Height="250">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="20" Opacity="0.5" ShadowDepth="5"/>
        </Border.Effect>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Ellipse x:Name="IconContainer" 
                         Grid.Column="0"
                         Width="32" Height="32" 
                         Fill="{StaticResource AccentBrush}"
                         Margin="0,0,15,0"/>
                <TextBlock x:Name="TitleText"
                           Grid.Column="1"
                           Text="Mesaj"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="{StaticResource TextBrush}"
                           VerticalAlignment="Center"/>
                <Button x:Name="CloseButton"
                        Grid.Column="2"
                        Content="✕"
                        Width="24" Height="24"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="{StaticResource TextSecondaryBrush}"
                        FontSize="16"
                        Cursor="Hand"
                        Click="CloseButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="12">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E53E3E"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <TextBlock x:Name="MessageText"
                           Text="{localconv:Loc MessageModalDefaultContent}"
                           FontSize="14"
                           Foreground="{StaticResource TextBrush}"
                           TextWrapping="Wrap"
                           LineHeight="20"
                           Margin="0,0,10,0"/>
            </ScrollViewer>
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right"
                        Margin="0,20,0,0">
                <Button x:Name="CancelButton"
                        Content="{localconv:Loc MessageModalCancelButton}"
                        MinWidth="80"
                        Height="35"
                        Background="{StaticResource CardBrush}"
                        BorderBrush="{StaticResource TextSecondaryBrush}"
                        BorderThickness="1"
                        Foreground="{StaticResource TextBrush}"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Margin="0,0,10,0"
                        Cursor="Hand"
                        Click="CancelButton_Click"
                        Visibility="Collapsed">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="6"
                                                Padding="12,8">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{StaticResource TextSecondaryBrush}"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
                <Button x:Name="OkButton"
                        Content="{localconv:Loc MessageModalOkButton}"
                        MinWidth="80"
                        Height="35"
                        Background="{StaticResource AccentBrush}"
                        BorderThickness="0"
                        Foreground="White"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="OkButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6"
                                                Padding="12,8">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#8B5CF6"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
        </Border>
    </Grid>
</Window>


