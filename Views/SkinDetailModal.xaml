<Window x:Class="WrightLauncher.Views.SkinDetailModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WrightLauncher.Views"
        Title="Skin Detayları"
        Width="400" Height="600"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Topmost="True">
    <Window.Resources>
        <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#7C3AED" Offset="0"/>
            <GradientStop Color="#A855F7" Offset="0.5"/>
            <GradientStop Color="#8B5CF6" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="SecondaryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1F1B2E" Offset="0"/>
            <GradientStop Color="#2A1F3D" Offset="0.5"/>
            <GradientStop Color="#1A1625" Offset="1"/>
        </LinearGradientBrush>
        <SolidColorBrush x:Key="TextBrush" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#94A3B8"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#7C3AED"/>
    </Window.Resources>
    <Grid Background="#AA000000">
        <Border Width="380" Height="580"
                Background="{StaticResource SecondaryGradient}"
                CornerRadius="20"
                BorderBrush="{StaticResource AccentBrush}"
                BorderThickness="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="#7C3AED" BlurRadius="25" Opacity="0.6" ShadowDepth="0"/>
            </Border.Effect>
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> 
                    <RowDefinition Height="*"/>    
                    <RowDefinition Height="Auto"/> 
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Height="60">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="🎨 Skin Detayları" 
                                   FontSize="20" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextBrush}">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#7C3AED" BlurRadius="4" Opacity="0.3" ShadowDepth="0"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </StackPanel>
                    <Button Grid.Column="1" 
                            Width="40" Height="40"
                            Background="Transparent"
                            BorderThickness="0"
                            Content="×"
                            FontSize="24"
                            FontWeight="Bold"
                            Foreground="{StaticResource TextBrush}"
                            Cursor="Hand"
                            Click="CloseButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="20"
                                                    BorderBrush="{StaticResource AccentBrush}"
                                                    BorderThickness="1">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#33EF4444"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,10">
                    <StackPanel>
                        <Border CornerRadius="15" 
                                Background="{StaticResource PrimaryGradient}"
                                Height="200"
                                Margin="0,0,0,20">
                            <Border.Effect>
                                <DropShadowEffect Color="#7C3AED" BlurRadius="10" Opacity="0.4" ShadowDepth="0"/>
                            </Border.Effect>
                            <Image x:Name="SkinImage"
                                   Source="{Binding ImageCard}"
                                   Stretch="UniformToFill"
                                   ClipToBounds="True"/>
                        </Border>
                        <TextBlock x:Name="SkinName"
                                   Text="{Binding Name}"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextBrush}"
                                   TextAlignment="Center"
                                   Margin="0,0,0,10">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#7C3AED" BlurRadius="4" Opacity="0.3" ShadowDepth="0"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock x:Name="ChampionName"
                                   Text="{Binding Champion}"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource AccentBrush}"
                                   TextAlignment="Center"
                                   Margin="0,0,0,10"/>
                        <Border x:Name="NSFWWarning"
                                Background="#22FF6B6B"
                                BorderBrush="#FF6B6B"
                                BorderThickness="2"
                                CornerRadius="10"
                                Padding="10"
                                Margin="0,0,0,10"
                                Visibility="{Binding Nsfw, Converter={x:Static local:BoolToVisibilityConverter.Instance}}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="⚠️" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="NSFW İçerik Uyarısı" 
                                           FontSize="14" 
                                           FontWeight="Bold"
                                           Foreground="#FF6B6B"/>
                            </StackPanel>
                        </Border>
                        <Grid Margin="0,0,0,20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="Nadirlik:" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,0,10,8"/>
                            <TextBlock Grid.Row="0" Grid.Column="1"
                                       Text="{Binding Rarity}"
                                       Foreground="{StaticResource TextBrush}"
                                       Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                       Text="Fiyat:" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,0,10,8"/>
                            <TextBlock Grid.Row="1" Grid.Column="1"
                                       Text="{Binding Price, StringFormat='{}{0} RP'}"
                                       Foreground="{StaticResource TextBrush}"
                                       Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                       Text="Yazar:" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,0,10,8"/>
                            <TextBlock Grid.Row="2" Grid.Column="1"
                                       Text="{Binding Author}"
                                       Foreground="{StaticResource TextBrush}"
                                       Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="3" Grid.Column="0" 
                                       Text="Etiketler:" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,0,10,8"/>
                            <TextBlock Grid.Row="3" Grid.Column="1"
                                       Text="{Binding Tags, Converter={x:Static local:TagsToStringConverter.Instance}}"
                                       Foreground="{StaticResource TextBrush}"
                                       Margin="0,0,0,8"
                                       TextWrapping="Wrap"/>
                            <TextBlock Grid.Row="4" Grid.Column="0" 
                                       Text="Durum:" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,0,10,8"/>
                            <Border Grid.Row="4" Grid.Column="1"
                                    Background="{Binding IsOwned, Converter={x:Static local:BoolToColorConverter.Instance}}"
                                    CornerRadius="10"
                                    Padding="8,4"
                                    HorizontalAlignment="Left">
                                <TextBlock Text="{Binding IsOwned, Converter={x:Static local:BoolToStatusConverter.Instance}}"
                                           FontSize="12"
                                           FontWeight="Bold"
                                           Foreground="White"/>
                            </Border>
                        </Grid>
                        <Border Background="#22FFFFFF"
                                CornerRadius="10"
                                Padding="15"
                                Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="📝 Açıklama"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextBrush}"
                                           Margin="0,0,0,8"/>
                                <TextBlock x:Name="SkinDescription"
                                           Text="{Binding Description}"
                                           FontSize="14"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           TextWrapping="Wrap"
                                           LineHeight="20"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
                <Grid Grid.Row="2" Height="60" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0"
                            Height="45"
                            Background="{StaticResource PrimaryGradient}"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="DownloadButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="10"
                                                    BorderBrush="{StaticResource AccentBrush}"
                                                    BorderThickness="2">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="#7C3AED" BlurRadius="8" Opacity="0.3" ShadowDepth="0"/>
                                                </Border.Effect>
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background">
                                                        <Setter.Value>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                <GradientStop Color="#8B5CF6" Offset="0"/>
                                                                <GradientStop Color="#A855F7" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="⬇️" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="İndir" 
                                       FontSize="14" 
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </StackPanel>
                    </Button>
                    <Button Grid.Column="2"
                            Height="45"
                            Background="Transparent"
                            BorderBrush="{StaticResource AccentBrush}"
                            BorderThickness="2"
                            Cursor="Hand"
                            Click="PreviewButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="10"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#22FFFFFF"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="👁️" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Önizle" 
                                       FontSize="14" 
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextBrush}"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>



