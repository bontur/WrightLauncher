<Application x:Class="WrightLauncher.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WrightLauncher"
             xmlns:converters="clr-namespace:WrightLauncher.Converters"
             xmlns:models="clr-namespace:WrightLauncher.Models">
    <Application.Resources>
        <FontFamily x:Key="BeaufortMedium">pack://application:,,,/Assets/Fonts/BeaufortforLOL-Medium.ttf#Beaufort for LOL</FontFamily>
        <Style TargetType="{x:Type Image}">
            <Setter Property="RenderOptions.BitmapScalingMode" Value="LowQuality"/>
            <Setter Property="RenderOptions.CachingHint" Value="Cache"/>
            <Setter Property="RenderOptions.CacheInvalidationThresholdMinimum" Value="0.5"/>
            <Setter Property="RenderOptions.CacheInvalidationThresholdMaximum" Value="2.0"/>
        </Style>
        <converters:BoolToStringConverter x:Key="BoolToStringConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <converters:InverseStringToVisibilityConverter x:Key="InverseStringToVisibilityConverter"/>
        <converters:SkinImageConverter x:Key="SkinImageConverter"/>
        <converters:HasYouTubePreviewConverter x:Key="HasYouTubePreviewConverter"/>
        <converters:NoYouTubePreviewConverter x:Key="NoYouTubePreviewConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:InverseNullToVisibilityConverter x:Key="InverseNullToVisibilityConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <converters:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter"/>
        <converters:FirstCharConverter x:Key="FirstCharConverter"/>
        <converters:BuildedButNotCustomVisibilityConverter x:Key="BuildedButNotCustomVisibilityConverter"/>
        <converters:UserIdToUsernameConverter x:Key="UserIdToUsernameConverter"/>
        <converters:OptimizedImageConverter x:Key="OptimizedImageConverter"/>
        <converters:ChampionLoadingImageConverter x:Key="ChampionLoadingImageConverter"/>
    </Application.Resources>
</Application>



